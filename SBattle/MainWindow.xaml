<Window x:Class="SBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:SBattle.UI"
        xmlns:aero="clr-namespace:Common.AeroGlass;assembly=Common"
        aero:GlassEffect.IsEnabled="True" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Поиск противников игры Морской бой" Height="330" Width="522">
    <Grid Margin="0,0,0,2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="#FF00C5FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Content="Игроки онлайн: " />
            <ListView Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" ItemsSource="{Binding Client.PlayersOnline}">
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFB9FDFD" Offset="0.447"/>
                        <GradientStop Color="#FF00C5FF" Offset="1"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя" Width="100" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Status}" />
                                        <Button Content="Играть!" Click="btnPlay_Click"
                                                Visibility="{Binding ReadyForGame, Converter={my:BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Label Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Content="Текущие игры: " />
            <ListView Grid.Column="2" Grid.Row="1" ItemsSource="{Binding Client.CurrentGames}" Margin="0,0,0,10">
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF9FEFF" Offset="0.427"/>
                        <GradientStop Color="#FF00C5FF" Offset="1"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Content="{Binding NameA}" />
                            <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" Content="{Binding ScoresA}" />

                            <Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Content="vs" />

                            <Label Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" Content="{Binding NameB}" />
                            <Label Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" Content="{Binding ScoresB}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Column="2" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="119" />
                    <ColumnDefinition Width="14"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Пароль: " />

                <PasswordBox Grid.Column="1" PasswordChar="*" Name="pwdPassword" Grid.ColumnSpan="3" Margin="24,0,66,0" />

                <Button Grid.Column="3" Content="" HorizontalAlignment="Stretch" 
                    Click="btnExpectForGame_Click" Name="btnExpectForGame" Margin="58,-15,0,0" Grid.ColumnSpan="2">
                    <Button.Background>
                        <ImageBrush ImageSource="Image/Find.png"/>
                    </Button.Background>
                </Button>
                <Button Grid.Column="3" Content="Отмена ожидания" HorizontalAlignment="Stretch"
                    Visibility="Hidden" Click="btnCancelExpectation_Click" Name="btnCancelExpectation" Grid.ColumnSpan="2"/>
            </Grid>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="0" Background="#FF00C5FF"
                      ResizeDirection="Rows" ResizeBehavior="PreviousAndNext"
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <my:ChatFrame Grid.Row="2" Grid.Column="0" Client="{Binding Client}" x:Name="chat" Loaded="Chat_Loaded" Background="#FF00C5FF" />
    </Grid>
</Window>
